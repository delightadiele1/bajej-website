extends base

mixin service-list(text, info, active='')
    a(href="").service-links
        li.text-white.bg-dark.p-3.mb-3.light.service-list(class=`${active}`, data-bs-info=`${info}`)
            .row 
                .col-1.my-auto
                    i.fa.fa-check.text-primary.me-3
                .col-11
                    | #{text}

mixin headings(text)
    .service__item-toggle
        h2.fs-3.text-center.display-5(style="font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;") #{text}.
        .row 
            .col-5
                .line.border.border-1.rounded-pill.border-secondary.mt-2
            .col-2.text-center.p-0
                i.fa.fa-cog.text-primary.fs-3.spin-on-hover
            .col-5
                .line.border.border-1.rounded-pill.border-secondary.mt-2

